@model Product

<div class="card border-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4 class="card-title">
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
        
    </div>
    <div class="card-text">@Model.Description</div>
</div>